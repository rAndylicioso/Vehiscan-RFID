# Database Configuration
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control!

DB_HOST=localhost
DB_NAME=vehiscan_vdp
DB_USER=root
DB_PASS=
DB_CHARSET=utf8mb4

# Application Settings
APP_ENV=development
APP_DEBUG=false

# Session Configuration
SESSION_LIFETIME=3600
SESSION_SECURE=false
SESSION_HTTPONLY=true

# Security Settings
CSRF_TOKEN_LENGTH=32
PASSWORD_MIN_LENGTH=12
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15

# Upload Settings
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# QR Code Settings
QR_CODE_SIZE=10
QR_CODE_ERROR_CORRECTION=L

# Email Configuration (for password reset emails)
# Option 1: Use Gmail SMTP (recommended for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_ENCRYPTION=tls
SMTP_AUTH=true
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SUPPORT_EMAIL=your-email@gmail.com
SUPPORT_NAME=VehiScan Support

# Option 2: Use local SMTP (configure XAMPP sendmail)
# SMTP_HOST=localhost
# SMTP_PORT=25
# SMTP_ENCRYPTION=
# SMTP_AUTH=false

# Option 3: Leave blank to use PHP mail() (requires php.ini configuration)
